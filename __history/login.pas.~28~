  private
    function Login:int16;
    { Private declarations }
  public
    { Public declarations }
  end;

implementation

{$R *.fmx}

procedure TLoginFrame.Text3Click(Sender: TObject);
var
result : int16;
begin
    result:=Login;
    if result=0 then
    begin
      rect_Login.Visible:=false;
    end
    else if result=-1 then
         begin
           showMessage('用户名或密码不能为空');
         end;

end;

function TLoginFrame.Login:int16;
var
name : string;
password: string;
tMes: tcp.TcpMessage;
begin
tMes:=tMes.Create;
  name:=inputName.Text;
  password:=inputPassword.Text;
    if (name='')and (password='') then
    begin
      Result:= -1;
      exit;
    end
    else
    begin

    end;
      Result:=0;
end;

end.

