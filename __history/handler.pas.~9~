unit handler;

interface

uses uDSimpleTcpClient,System.Classes,System.SysUtils,System.Generics.Collections,
FMX.Dialogs;

type executeHandler = class

  private

  public
  DM: TDictionary<int16,TOnReadProc>;
  procedure DealWithAfterLoginButton(Astream:TMemoryStream);
  procedure AddDictionary;
  constructor Create;
  destructor Destroy; override;
end;

var ExHandler :executeHandler;

implementation

constructor executeHandler.Create;
begin
   DM:= TDictionary<int16,TOnReadProc>.Create;
end;

destructor executeHandler.Destroy;
begin
   DM.DisposeOf;
end;

procedure executeHandler.AddDictionary();
begin
   DM.Add(2001,DealWithAfterLoginButton);
end;

procedure executeHandler.DealWithAfterLoginButton(Astream:TMemoryStream);
begin
     showMessage('666666');
end;
end.
